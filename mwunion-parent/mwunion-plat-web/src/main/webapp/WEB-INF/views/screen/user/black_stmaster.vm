    function edit(rowData){  
        rowDatarowData = rowData || Horn.getComp('stmasterTable').getSelecteds().length && (Horn.getComp('stmasterTable').getSelecteds())[0];  
        Horn.getComp("stmasterEditForm").setValues(rowData.rowdata);  
